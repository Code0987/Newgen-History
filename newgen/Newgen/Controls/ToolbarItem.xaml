<UserControl x:Class="Newgen.Controls.ToolbarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             RenderTransformOrigin="0.5,0.5" Margin="5,10,5,0"
             MouseLeftButtonDown="UserControlMouseLeftButtonDown"  MouseLeftButtonUp="UserControlMouseLeftButtonUp" MouseLeave="UserControlMouseLeave">
    <DockPanel>
        <TextBlock Name="TitleTextBlock" DockPanel.Dock="Bottom" Foreground="White" FontSize="12.5" HorizontalAlignment="Center" TextAlignment="Center" Margin="5,5,5,0" TextWrapping="Wrap"/>
        <Image Name="IconImage" Width="40" HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
    </DockPanel>
</UserControl>