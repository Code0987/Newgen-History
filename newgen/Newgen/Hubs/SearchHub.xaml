<Window x:Class="Newgen.Windows.SearchHub" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:Newgen.Controls" xmlns:Properties="clr-namespace:Newgen.Properties" Background="Black" Closing="WindowClosing" Foreground="White" KeyUp="WindowKeyUp" Left="0" ResizeMode="NoResize" ShowInTaskbar="False" SourceInitialized="WindowSourceInitialized" Top="0" WindowStyle="None">
    <Grid Margin="0,0,0,0">
        <Grid Margin="0,120,0,0">
            <StackPanel Orientation="Horizontal">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Margin="150,0,0,0" FontSize="26" FontWeight="Light" HorizontalAlignment="Left" Text="{x:Static Properties:Resources.SearchHubTip}" TextWrapping="Wrap" VerticalAlignment="Top" />
                    <WrapPanel Margin="145,20,0,20" HorizontalAlignment="Left" Name="SearchPanel" Orientation="Vertical" />
                </DockPanel>
            </StackPanel>
        </Grid>
        <Image Margin="50,58,20,0" Width="48" HorizontalAlignment="Left" MouseLeftButtonUp="BackButtonMouseLeftButtonUp" Name="BackButton" Source="/Resources/back_icon_hub.png" VerticalAlignment="Top" />
        <TextBlock Margin="150,20,0,0" FontSize="76" FontWeight="Light" HorizontalAlignment="Left" Text="Search" VerticalAlignment="Top" />
    </Grid>
</Window>