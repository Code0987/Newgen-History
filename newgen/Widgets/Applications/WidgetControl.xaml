<UserControl x:Class="Applications.WidgetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Properties="clr-namespace:Applications.Properties"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="180" d:DesignWidth="180"
             Background="#0f92d6" MouseLeftButtonUp="UserControlMouseLeftButtonUp">
    <Grid>
        <TextBlock Text="{x:Static Properties:Resources.HelloString}" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="Newgen widget" Foreground="White" FontSize="14" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10"/>
    </Grid>
</UserControl>