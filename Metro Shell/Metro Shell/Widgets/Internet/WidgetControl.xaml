<UserControl x:Class="Internet.WidgetControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Properties="clr-namespace:Internet.Properties" MouseLeftButtonUp="UserControlMouseLeftButtonUp" mc:Ignorable="d" d:DesignHeight="180" d:DesignWidth="360">
    <UserControl.Background>
        <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
            <GradientStop Color="#4a4ba7" Offset="1" />
            <GradientStop Color="#585bbc" Offset="0" />
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid>
        <Image Stretch="Uniform" Source="/Internet;component/Resources/internet.png" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <TextBlock Text="{x:Static Properties:Resources.Internet}" Foreground="White" FontSize="14" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10"/>
    </Grid>
</UserControl>