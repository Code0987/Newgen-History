<UserControl x:Class="Video.VideoWidget" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MouseLeftButtonUp="UserControlMouseLeftButtonUp">
    <UserControl.Background>
        <LinearGradientBrush EndPoint="0,0" StartPoint="1,0">
            <GradientStop Color="#FF7E37B3" Offset="0" />
            <GradientStop Color="#FF662A96" Offset="1" />
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid>
        <Image Width="65" Source="/Video;component/Resources/video_logo.png" />
        <TextBlock Margin="10,0,0,10" FontSize="14" Foreground="White" HorizontalAlignment="Left" Text="Video" VerticalAlignment="Bottom" />
    </Grid>
</UserControl>