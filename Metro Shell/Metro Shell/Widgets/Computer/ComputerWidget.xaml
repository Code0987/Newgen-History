<UserControl x:Class="Computer.ComputerWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MouseLeftButtonUp="UserControlMouseLeftButtonUp">
    <UserControl.Background>
        <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
            <GradientStop Color="#FFCB796D" Offset="0" />
            <GradientStop Color="#d1533c" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid>
        <Image Stretch="Uniform" Source="/Computer;component/Resources/computer_icon.png" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <TextBlock Text="Computer" Foreground="White" FontSize="14" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10"/>
    </Grid>
</UserControl>