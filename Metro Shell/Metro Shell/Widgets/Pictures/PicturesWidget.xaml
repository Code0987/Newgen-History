<UserControl x:Class="Pictures.PicturesWidget" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MouseLeftButtonUp="UserControlMouseLeftButtonUp" Background="Black">
    <UserControl.Resources>
        <Storyboard x:Key="SwitchPictureAnim">
            <DoubleAnimation Storyboard.TargetName="PictureTranslate" Storyboard.TargetProperty="X" AccelerationRatio="0.6" Completed="SwitchAnimationCompleted" Duration="0:0:0.7" FillBehavior="Stop" From="0" To="-350" />
        </Storyboard>
    </UserControl.Resources>
    <Grid ClipToBounds="True">
        <Image ClipToBounds="True" Name="PictureBg" Stretch="UniformToFill">
            <Image.RenderTransform>
                <TranslateTransform x:Name="PictureBgTranslate" />
            </Image.RenderTransform>
        </Image>
        <Image ClipToBounds="True" Name="Picture" Stretch="UniformToFill">
            <Image.RenderTransform>
                <TranslateTransform x:Name="PictureTranslate" />
            </Image.RenderTransform>
        </Image>
        <TextBlock Margin="10,0,0,10" FontSize="14" Foreground="White" HorizontalAlignment="Left" Text="Pictures" VerticalAlignment="Bottom" />
    </Grid>
</UserControl>