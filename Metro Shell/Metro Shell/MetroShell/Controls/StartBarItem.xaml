<UserControl x:Class="Ftware.Apps.MetroShell.Controls.StartBarItem" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Margin="5,0" Loaded="UserControl_Loaded" MouseEnter="UserControlMouseEnter" MouseLeave="UserControlMouseLeave" MouseLeftButtonDown="UserControlMouseLeftButtonDown" MouseLeftButtonUp="UserControlMouseLeftButtonUp" RenderTransformOrigin="0.5,0.5" Unloaded="UserControlUnloaded">
    <UIElement.RenderTransform>
        <TranslateTransform x:Name="Translate" />
    </UIElement.RenderTransform>
    <Border CornerRadius="5" Name="LayoutRoot">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Transparent" Offset="0" />
                <GradientStop Color="#64FFFFFF" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>
        <Image RenderOptions.BitmapScalingMode="HighQuality" Height="32" Margin="1" Width="32" Name="IconImage" />
    </Border>
</UserControl>