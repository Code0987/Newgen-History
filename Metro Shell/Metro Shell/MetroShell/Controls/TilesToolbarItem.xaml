<UserControl x:Class="Ftware.Apps.MetroShell.Controls.TilesToolbarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Margin="5,10,5,0"
             MouseEnter="UserControlMouseEnter"
             MouseLeave="UserControlMouseLeave"
             MouseLeftButtonDown="UserControlMouseLeftButtonDown"
             MouseLeftButtonUp="UserControlMouseLeftButtonUp"
             RenderTransformOrigin="0.5,0.5">
    <UIElement.RenderTransform>
        <TranslateTransform x:Name="Translate" />
    </UIElement.RenderTransform>
    <DockPanel>
        <TextBlock Name="TitleTextBlock"
                   Width="52"
                   Margin="5,5,5,0"
                   HorizontalAlignment="Center"
                   DockPanel.Dock="Bottom"
                   FontSize="12.5"
                   Foreground="White"
                   TextAlignment="Center"
                   TextTrimming="CharacterEllipsis"
                   TextWrapping="NoWrap" />
        <Image Name="IconImage"
               Width="52"
               HorizontalAlignment="Center"
               RenderOptions.BitmapScalingMode="HighQuality" />
    </DockPanel>
</UserControl>